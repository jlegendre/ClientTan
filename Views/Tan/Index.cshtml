@model IEnumerable<TanClient.Controllers.ArretDTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodeLieu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Libelle)
        </th>
        <th>
            Lignes de bus
        </th>
        <th>

        </th>

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodeLieu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Libelle)
        </td>
        <td>
            @foreach (var ligne in item.Ligne)
    {
        @Html.DisplayFor(modelItem => ligne.NumLigne)
            <text>&nbsp;</text>
}
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.CodeLieu })
        </td>

        </tr>
}

</table>
